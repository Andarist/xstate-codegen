{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "outDir": "../global-env/bin",
    "baseUrl": "../global-env/src",
  },
  "include": [
    "../global-env/src"
  ]
}